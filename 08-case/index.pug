doctype html 
html
    head
        title Case Statements in Pug
    body
        // order status => Pending || In_Transit || Completed
        - const orderStatus = "Pending";

        case orderStatus 
            when "Pending"
                p Your order is pending
            when "In_Transit"
                p Your order is in transit
            when "Completed"
                p Your order is completed
            default
                p Your order status is unknown